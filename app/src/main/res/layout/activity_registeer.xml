<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".acitvity.Register">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back_register"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/back"
        />


    <TextView
        android:id="@+id/title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="注册"
        android:textColor="#000"
        android:textSize="23sp"
        android:typeface="monospace" />

    <RelativeLayout
        android:id="@+id/rl_userName_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_register"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_userIconName_rg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user" />

        <View
            android:id="@+id/viewName_rg"
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userIconName_rg"
            android:background="#AAA"/>

        <EditText
            android:id="@+id/et_userName_rg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/viewName_rg"
            android:background="@null"
            android:ems="19"
            android:hint="  用户名"
            android:inputType="textVisiblePassword"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_unameClear_rg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/delete"
            android:visibility="invisible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userPassword_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userName_rg"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_userIconPwd_rg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/password" />

        <View
            android:id="@+id/viewPwd_rg"
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#AAA"
            android:layout_toRightOf="@id/iv_userIconPwd_rg" />

        <EditText
            android:id="@+id/et_password_rg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/viewPwd_rg"
            android:background="@null"
            android:ems="19"
            android:hint=" 密码"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_pwdClear_rg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/delete"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_pwdShow_rg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/eye_gray"
                android:layout_marginRight="20dp"
                android:visibility="visible"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userPassword2_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userPassword_rg"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_userIconPwd2_rg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/password" />

        <View
            android:id="@+id/viewPwd2_rg"
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="#AAA"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_userIconPwd2_rg" />

        <EditText
            android:id="@+id/et_password2_rg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/viewPwd2_rg"
            android:background="@null"
            android:ems="19"
            android:hint=" 确认密码"
            android:inputType="textPassword"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_pwdClear2_rg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/delete"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_pwdShow2_rg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/eye_gray"
                android:layout_marginRight="20dp"
                android:visibility="visible"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pasQue_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_userPassword2_rg"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_pasQue_rg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/question"/>

        <View
            android:id="@+id/viewPasQue_rg"
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="#AAA"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_pasQue_rg" />

        <EditText
            android:id="@+id/et_pasQue_rg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/viewPasQue_rg"
            android:background="@null"
            android:ems="19"
            android:hint="  密保问题"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_pasQueClear_rg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/delete"
            android:visibility="invisible"
            android:background="@color/colorPrimaryDark"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pasAus_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_pasQue_rg"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_pasAus_rg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/answer"/>

        <View
            android:id="@+id/pasAus_rg"
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="#AAA"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_pasAus_rg" />

        <EditText
            android:id="@+id/et_pasAus_rg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pasAus_rg"
            android:background="@null"
            android:ems="19"
            android:hint="  密保答案"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_pasAusClear_rg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/delete"
            android:visibility="invisible"
            android:background="@color/colorPrimaryDark"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_register_rg"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_pasAus_rg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:textColor="#fff"
        android:background="@color/loveBlue"
        android:textSize="18sp" />







</RelativeLayout>
