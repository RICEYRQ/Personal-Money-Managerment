<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".acitvity.CheckQueAus">

    <TextView
        android:id="@+id/title_checkQueAus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="请输入密保答案"
        android:textColor="#000"
        android:textSize="23sp"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tv_pasQue"
        android:textSize="15sp"
        android:layout_below="@id/title_checkQueAus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:id="@+id/rl_pasAus_cqa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pasQue"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_pasAus_cqa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp" />

        <View
            android:id="@+id/pasAus_cqa"
            android:layout_width="1dip"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_pasAus_cqa" />

        <EditText
            android:id="@+id/et_pasAus_cqa"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pasAus_cqa"
            android:background="@null"
            android:ems="19"
            android:hint="  密保答案"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_pasAusClear_cqa"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:visibility="invisible"
            android:background="@color/colorPrimaryDark"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_findPas_cqa"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_pasAus_cqa"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:text="下一步"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:textSize="18sp" />



</RelativeLayout>
